{% extends "base.html.twig" %}
{% block title %}
    {% if article %}
        {{ article.title }}
    {% else %}
        Article introuvable.
    {% endif %}
{% endblock %}
{% block body %}
    {% if article %}
        <p>
            <img src="/assets/images/article/{{ article.image }}" alt="{{ article.title }}" width="100%">
        </p>
        <h3 class="text-center">
            {{ article.title }}
        </h3>
        <p class="text-justify">
            {{ article.content | raw }}
        </p>
        <p class="text-center">
            le {{ article.createdAt | date("d/m/Y à H:i") }} <br>
            par {{ article.author }}
        </p>
        <ul>
            catégories : <br>
            {% for category in article.categories %}
                <li>
                    {{ category }}
                </li>
            {% endfor %}
        </ul>
    {% else %}
        Article introuvable.
    {% endif %}
{% endblock %}